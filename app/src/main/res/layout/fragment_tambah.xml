<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="40dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/shadow_titlebar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Tambah Barang"
                android:textColor="@color/abu"
                app:layout_constraintBottom_toTopOf="@+id/view3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/iv_photoitem_tambah"
                android:layout_width="280dp"
                android:layout_height="280dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="77dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageButton
                android:id="@+id/ib_photoitem_tambah"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:layout_marginEnd="52dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="77dp"
                android:tint="@color/biru"
                android:src="@drawable/ic_camera"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_photoitem_tambah" />

            <EditText
                android:id="@+id/et_namabarang_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/rounded_field"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Nama Barang"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="15sp"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ib_photoitem_tambah"/>

            <EditText
                android:id="@+id/et_hargabarang_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/rounded_field"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Harga"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="15sp"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_namabarang_tambah"/>

            <EditText
                android:id="@+id/et_stokbarang_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/rounded_field"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Stok Barang"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="15sp"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_hargabarang_tambah" />

            <EditText
                android:id="@+id/et_diskonharga_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/rounded_field"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Diskon"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="15sp"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_stokbarang_tambah"/>

            <EditText
                android:id="@+id/et_merkbarang_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/rounded_field"
                android:elevation="10dp"
                android:ems="10"
                android:hint="Merk Barang"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="15sp"
                android:typeface="sans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_diskonharga_tambah"/>


            <Button
                android:id="@+id/btn_tambahbarang_tambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_btn_biru"
                android:text="Tambahkan"
                android:layout_marginTop="18dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/et_merkbarang_tambah"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>